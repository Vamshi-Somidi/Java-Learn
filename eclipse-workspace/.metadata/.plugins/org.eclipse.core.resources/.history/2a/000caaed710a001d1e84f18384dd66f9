package myjava;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		pattern(4);

	}
	
	static void pattern(int n)
	{
		for(int row=0;row<n;row++)
		{
			int noOfSpaces=n-row;
			
			for(int space=1;space<=noOfSpaces;space++)
			{
				System.out.println(" ");
			}
			
			for(int col=0;col<=row;col++)
			{
				System.out.printl("1 ")
			}
			
		}
	}

}
